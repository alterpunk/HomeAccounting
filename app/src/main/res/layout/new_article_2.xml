<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/article_type_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/article_type_label"
        android:layout_marginBottom="16dp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/article_type_spinner"
        android:layout_below="@id/article_type_label"
        android:entries="@array/article_types"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sum_of_article_label"
        android:text="@string/sum_of_article_label"
        android:layout_below="@id/article_type_spinner"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/sum_of_article"
        android:layout_below="@id/sum_of_article_label"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_of_article_label"
        android:text="@string/category_of_article_label"
        android:layout_below="@id/sum_of_article"
        android:layout_marginBottom="16dp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/article_category_spinner"
        android:layout_below="@id/category_of_article_label"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_of_article_label"
        android:text="@string/comment_of_article_label"
        android:layout_below="@id/article_category_spinner"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/comment_of_article"
        android:layout_below="@id/comment_of_article_label"/>
</RelativeLayout>